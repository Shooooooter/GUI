<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="abyss.codeeditor.ui.AppController" prefHeight="600.0" prefWidth="800.0" stylesheets="@App.css">
    <top>
        <MenuBar>
            <Menu text="File">
                <MenuItem text="New"/>
                <MenuItem text="Open"/>
                <MenuItem text="Save"/>
                <SeparatorMenuItem/>
                <MenuItem text="Exit"/>
            </Menu>
            <Menu text="Edit">
                <MenuItem text="Undo"/>
                <MenuItem text="Redo"/>
                <SeparatorMenuItem/>
                <MenuItem text="Copy"/>
                <MenuItem text="Cut"/>
                <MenuItem text="Paste"/>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <TextArea fx:id="codeTextArea" wrapText="true"/>
    </center>
    <bottom>
        <Label fx:id="statusBar" text="Ready"/>
    </bottom>
    <left>
        <StackPane fx:id="directoryPane">
            <ListView fx:id="directoryListView"/>
            <Button text="Choose Directory" onAction="#chooseDirectory"/>
        </StackPane>
    </left>
    <bottom>
        <StackPane fx:id="terminalPane">
            <TextArea fx:id="terminalTextArea" editable="false"/>
            <VBox>
                <TextField fx:id="terminalInputField" promptText="Type a command..."/>
                <Button text="Execute" onAction="#executeCommand"/>
            </VBox>
        </StackPane>
    </bottom>
</BorderPane>